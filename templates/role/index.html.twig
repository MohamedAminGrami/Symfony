{% extends 'base.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}

    <h1>Role index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CodeR</th>
                <th>Libelle</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.CodeR }}</td>
                <td>{{ role.Libelle }}</td>
                <td>{{ role.Prix }}</td>
                <td>
                    <a href="{{ path('app_role_show', {'id': role.id}) }}">show</a>
                    <a href="{{ path('app_role_edit', {'id': role.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_role_new') }}">Create new</a>
{% endblock %}
